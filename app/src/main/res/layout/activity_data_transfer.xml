<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DataTransfer">

    <EditText
        android:backgroundTint="@color/main_theme"
        android:id="@+id/DT_INPUT"
        android:textColor="@color/main_theme"
        android:textColorHint="@color/main_theme"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a sentence you wish to encrypt..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/DT_UPLOADBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt Sentence"
        android:textAllCaps="false"
        android:backgroundTint="@color/main_theme"
        android:textColor="#ff23729a"
        android:layout_marginTop="250dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DT_ENDSESSION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff23729a"
        android:backgroundTint="@color/main_theme"
        android:text="End Session"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DT_INPUT" />



</androidx.constraintlayout.widget.ConstraintLayout>